<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_modifyHoldingStock_LinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#Bfff"
    android:orientation="vertical"
    android:layout_centerInParent="true">

    <EditText
        android:id="@+id/layout_modifyHoldingStock_editText_holdingRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="输入要修改的股票行号"
        android:layout_margin="0dp">
    </EditText>
    <EditText
        android:id="@+id/layout_modifyHoldingStock_editText_stockCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="输入要修改的股票代码"
        android:layout_margin="0dp">
    </EditText>
    <EditText
        android:id="@+id/layout_modifyHoldingStock_editText_stockPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="输入要修改的股票价格"
        android:layout_margin="0dp">
    </EditText>
    <EditText
        android:id="@+id/layout_modifyHoldingStock_editText_stockNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="输入要修改的股票数量"
        android:layout_margin="0dp">
    </EditText>
    <EditText
        android:id="@+id/layout_modifyHoldingStock_editText_buyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="输入要修改的日期"
        android:layout_margin="0dp">
    </EditText>
    <Button
        android:id="@+id/layout_modifyHoldingStock_button_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="确认调整"
        android:layout_margin="@dimen/layout_addstock_margin"/>
</LinearLayout>
