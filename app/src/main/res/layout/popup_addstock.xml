<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout_addstock">
    <LinearLayout
        android:id="@+id/layout_addstock_LinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/layout_addstock_editText_stockCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="输入证券代码"
            android:layout_margin="@dimen/layout_addstock_margin">
        </EditText>
        <EditText
            android:id="@+id/layout_addstock_editText_stockPrice"
            android:hint="输入购买价格"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/layout_addstock_margin"/>
        <EditText
            android:id="@+id/layout_addstock_editText_stockNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="输入购买数量"
            android:layout_margin="@dimen/layout_addstock_margin"/>
        <Button
            android:id="@+id/layout_addstock_button_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="购买确认"
            android:layout_margin="@dimen/layout_addstock_margin"/>
    </LinearLayout>


</RelativeLayout>